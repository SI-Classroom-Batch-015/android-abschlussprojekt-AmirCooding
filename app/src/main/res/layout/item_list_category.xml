<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/product_item_background"
        android:backgroundTint="@color/background"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="105dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:background="@drawable/product_item_background"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/constraintLayout3">

            <ImageView
                    android:id="@+id/image_product_IV"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/primaryDark"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="TODO"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout9"
            app:layout_constraintTop_toTopOf="@+id/linearLayout8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:textColor="@color/primaryDark"
                android:text="AirMax"
                android:maxLines="2"
                android:textSize="12sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_name_TV" />

        <TextView
                android:layout_width="match_parent"
                android:textColor="@color/hint"
                android:text="description"
                android:maxLines="2"
                android:layout_margin="5dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/item_description_TV"
                app:layout_constraintEnd_toEndOf="@+id/item_name_TV"
                app:layout_constraintStart_toStartOf="@+id/item_name_TV"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/item_name_TV" />

        <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/hint"
                android:layout_margin="5dp"
                android:text="534 "
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:id="@+id/item_upv_price_TV"
                app:layout_constraintEnd_toEndOf="@+id/item_description_TV"
                app:layout_constraintTop_toBottomOf="@+id/item_description_TV"
                android:layout_marginEnd="132dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />


        <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/primary"
                android:layout_margin="5dp"
                android:text="435"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/item_current_price_TV"
                app:layout_constraintEnd_toEndOf="@+id/item_upv_price_TV"
                app:layout_constraintTop_toBottomOf="@+id/item_upv_price_TV"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />


    </LinearLayout>



</LinearLayout>

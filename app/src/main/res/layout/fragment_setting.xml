<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.setting.SettingFragment">

    <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cartView1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/background"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    app:cardCornerRadius="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/materialCardView">
                <ImageView
                        android:id="@+id/add_image_profile_IV"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:src="@drawable/icon_iamge_picker"
                        android:layout_height="match_parent"
                        android:contentDescription="TODO" />

            </com.google.android.material.card.MaterialCardView>


            <TextView
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="10dp"
                    android:text="Full Name"
                    android:textColor="@color/primaryDark"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="0.3dp"
                    android:background="@color/divider"
                    android:id="@+id/view1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollView2"
                    app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/background"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cartView1">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"

                android:layout_width="match_parent"
                android:backgroundTint="@color/background"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Information"
                        android:textColor="@color/primaryDark"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"

                        android:layout_height="wrap_content" />

                <View
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="3dp"
                        android:layout_height="0.5dp"
                        android:background="@color/primaryDark"
                        android:id="@+id/view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar_list"
                        app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <LinearLayout
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout13"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                        android:layout_width="50dp"
                        android:backgroundTint="@color/background"
                        android:src="@drawable/icon_email_20"
                        android:background="@drawable/icon_place_holder"
                        android:layout_height="50dp"
                        android:contentDescription="TODO" />

                <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <LinearLayout

                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/email_TV"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:text="@string/example_gmail_com"
                                android:layout_height="wrap_content" />

                        <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                        <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/icon_edit_light"
                                android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:text="Email"
                                android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
                    app:layout_constraintStart_toStartOf="parent">

                <ImageView
                        android:layout_width="50dp"
                        android:backgroundTint="@color/background"
                        android:src="@drawable/icon_telephone_16"
                        android:background="@drawable/icon_place_holder"
                        android:layout_height="50dp"
                        android:contentDescription="TODO" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                    <LinearLayout

                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/tel_TV"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:text="@string/_49123456789"
                                android:layout_height="wrap_content" />

                        <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                        <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/icon_edit_light"
                                android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:text="Phone"
                                android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout15"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                        android:layout_width="50dp"
                        android:backgroundTint="@color/background"
                        android:src="@drawable/icon_home_16"
                        android:background="@drawable/icon_place_holder"
                        android:layout_height="50dp"
                        android:contentDescription="TODO" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/street_TV"
                                    android:layout_marginStart="10dp"
                                    android:layout_width="wrap_content"
                                    android:text="MÃ¼hlheimer Str"
                                    android:layout_height="wrap_content" />

                            <TextView
                                    android:id="@+id/number_TV"
                                    android:layout_marginStart="10dp"
                                    android:layout_width="wrap_content"
                                    android:text="28"
                                    android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/zip_TV"
                                    android:layout_marginStart="10dp"
                                    android:layout_width="wrap_content"
                                    android:text="28329"
                                    android:layout_height="wrap_content" />
                            <TextView
                                    android:id="@+id/city_TV"
                                    android:layout_marginStart="10dp"
                                    android:layout_width="wrap_content"
                                    android:text=" Bremen"
                                    android:layout_height="wrap_content" />
                        </LinearLayout>



                        <TextView
                                android:id="@+id/country_TV"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:text="Germany"
                                android:layout_height="wrap_content" />


                    </LinearLayout>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/icon_edit_light"
                            android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <Button
            android:id="@+id/log_out_B"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="normal"
            android:textColor="@color/background"
            android:backgroundTint="@color/error"
            android:drawableLeft="@drawable/icon_log_out"
            android:text="Sign Out"

            android:layout_height="60dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.039" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginEnd="5dp"
        android:background="@drawable/product_item_background"
        android:backgroundTint="@color/background"
        android:layout_width="155dp"
        app:cardCornerRadius="30dp"
        android:layout_height="220dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
          android:layout_margin="5dp"
            android:layout_height="111dp"
            android:padding="3dp"
            android:background="@drawable/product_item_background"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraintLayout3">

        <ImageView
                android:id="@+id/image_product_IV"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primaryDark"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:layout_width="match_parent"
            android:textColor="@color/primaryDark"
            android:maxLines="1"
            android:text="AirMax"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_name_TV"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintHorizontal_bias="0.053" />

    <TextView
            android:layout_width="match_parent"
            android:textColor="@color/hint"
            android:text="description"
            android:maxLines="1"
          android:layout_margin="5dp"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:id="@+id/item_description_TV"
            app:layout_constraintEnd_toEndOf="@+id/item_name_TV"
            app:layout_constraintStart_toStartOf="@+id/item_name_TV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/item_name_TV" />

    <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/hint"
            android:layout_margin="5dp"
            android:text="534 "
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:id="@+id/item_upv_price_TV"
            app:layout_constraintEnd_toEndOf="@+id/item_description_TV"
            app:layout_constraintTop_toBottomOf="@+id/item_description_TV"
            android:layout_marginEnd="132dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />


    <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/primary"
            android:layout_margin="5dp"
            android:text="435"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/item_current_price_TV"
            app:layout_constraintEnd_toEndOf="@+id/item_upv_price_TV"
            app:layout_constraintTop_toBottomOf="@+id/item_upv_price_TV"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
            android:layout_gravity="bottom"
            android:layout_width="30dp"
            android:src="@drawable/icon_favorite"
            android:background="@drawable/icon_place_holder"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/item_description_TV"
            app:layout_constraintVertical_bias="0.692"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.872" />


</androidx.constraintlayout.widget.ConstraintLayout>
